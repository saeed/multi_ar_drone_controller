OBJS=$(patsubst %.cpp,%.o,$(wildcard *.cpp))

include ../Mk/local.Mk
CXXINCLUDE+=-I./ -I../common -I../imageproc -I../gui -I../control -I/usr/local/include/opencv -I/usr/local/include/opencv -lcurl
CXXINCLUDE+=-I/usr/local/include

all: $(OBJS) 

.cpp.o:
	$(CXX)  $(CXXFLAGS) `pkg-config --cflags --libs opencv` -lcurl $(CXXDEFINE) -c $(CXXINCLUDE) $< 

.c.o:
	$(CXX)  $(FLAGS) `pkg-config --cflags --libs opencv` -lcurl $(CXXDEFINE) -c  $(CXXFLAGS) $(CXXINCLUDE) $< 

clean:
	$(RM) $(OBJS) *.moc $(UI_HEAD) $(UI_CPP)
